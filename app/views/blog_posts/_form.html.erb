<%= form_with(model: blog_post, url: blog_post.persisted? ? blog_post_path(blog_post) : blog_posts_path, local: true) do |form| %>
  <%if form.object.errors.any?%>
    <%form.object.errors.full_messages.each do |message|%>
      <div><%=message%></div>
    <%end%>
  <%end%>

  <div>
    <%=form.label :title%>
    <%=form.text_field :title%>
  </div>
  <div>
    <%=form.label :body%>
    <%=form.text_area :body%>
  </div>
  <%= form.submit blog_post.persisted? ? "Update Blog Post" : "Create Blog Post" %>
  <%end%>